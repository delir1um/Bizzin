<body class="body email-wrapper" style="background-color: #F8FAFC; margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', Helvetica, Arial, sans-serif;">
    
    <!-- Email Wrapper -->
    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #F8FAFC;">
        <tr>
            <td align="center" style="padding: 20px 0;">
                
                <!-- Main Container -->
                <table role="presentation" cellspacing="0" cellpadding="0" border="0" class="main-container" style="max-width: 760px; background-color: #FFFFFF; border-radius: 16px; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);">
                    
                    <!-- Header Section -->
                    <tr>
                        <td class="header-section" style="background: linear-gradient(135deg, #EA580C 0%, #DC2626 100%); padding: 40px 48px; text-align: center;">
                            <div class="header-logo" style="color: #FFFFFF; font-size: 32px; font-weight: 700; letter-spacing: -0.5px; margin-bottom: 12px;">
                                Bizzin
                            </div>
                            <h1 class="header-greeting" style="color: #FFFFFF; font-size: 24px; font-weight: 600; margin: 0 0 8px 0;">
                                {{greeting}}
                            </h1>
                            <p class="header-subtitle" style="color: rgba(255, 255, 255, 0.9); font-size: 16px; font-weight: 400; margin: 0;">
                                Your daily business digest for {{currentDate}}
                            </p>
                        </td>
                    </tr>
                    
                    <!-- Content Section -->
                    <tr>
                        <td class="content-section" style="padding: 48px;">
                            
                            <!-- Daily Motivation Quote -->
                            {{#if motivationQuote}}
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" class="insight-card quote-card" style="background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%); border: none; border-left: 4px solid #F59E0B; border-radius: 12px; padding: 32px; margin-bottom: 32px;">
                                <tr>
                                    <td>
                                        <p class="quote-text" style="font-size: 18px; font-style: italic; font-weight: 500; color: #92400E; margin: 0 0 12px 0; text-align: center;">
                                            "{{motivationQuote}}"
                                        </p>
                                        <p class="quote-author" style="text-align: center; color: #A16207; font-size: 14px; font-weight: 600; margin: 0;">
                                            💡 Your Daily Business Fuel
                                        </p>
                                    </td>
                                </tr>
                            </table>
                            {{/if}}
                            
                            <!-- Top Priority Goal -->
                            {{#if topGoal}}
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" class="insight-card" style="background-color: #FFFFFF; border: 1px solid #E5E7EB; border-radius: 12px; padding: 32px; margin-bottom: 32px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);">
                                <tr>
                                    <td>
                                        <div class="card-header" style="display: flex; align-items: center; margin-bottom: 20px;">
                                            <span class="card-icon" style="font-size: 20px; margin-right: 12px;">🎯</span>
                                            <h2 class="card-title" style="color: #111827; font-size: 18px; font-weight: 600; margin: 0;">Your Focus Goal</h2>
                                        </div>
                                        <p class="card-content" style="color: #374151; font-size: 15px; line-height: 1.7; margin: 0 0 20px 0;">
                                            <strong>{{topGoal.title}}</strong>
                                        </p>
                                        <div style="background-color: #F3F4F6; border-radius: 8px; padding: 16px;">
                                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                                                <span style="color: #6B7280; font-size: 14px; font-weight: 500;">Progress</span>
                                                <span style="color: #EA580C; font-size: 16px; font-weight: 700;">{{topGoal.progress}}%</span>
                                            </div>
                                            <div style="background-color: #E5E7EB; height: 8px; border-radius: 4px; overflow: hidden;">
                                                <div style="background: linear-gradient(135deg, #EA580C 0%, #DC2626 100%); height: 100%; width: {{topGoal.progress}}%; border-radius: 4px;"></div>
                                            </div>
                                            {{#if topGoal.days_remaining}}
                                            <p style="color: #6B7280; font-size: 13px; margin: 12px 0 0 0;">
                                                {{topGoal.days_remaining}} days remaining
                                            </p>
                                            {{/if}}
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            {{/if}}
                            
                            <!-- Journal Progress -->
                            {{#if journalSnapshot}}
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" class="insight-card" style="background-color: #FFFFFF; border: 1px solid #E5E7EB; border-radius: 12px; padding: 32px; margin-bottom: 32px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);">
                                <tr>
                                    <td>
                                        <div class="card-header" style="display: flex; align-items: center; margin-bottom: 20px;">
                                            <span class="card-icon" style="font-size: 20px; margin-right: 12px;">📝</span>
                                            <h2 class="card-title" style="color: #111827; font-size: 18px; font-weight: 600; margin: 0;">Journal Progress</h2>
                                        </div>
                                        <p class="card-content" style="color: #374151; font-size: 15px; line-height: 1.7; margin: 0;">
                                            {{journalSnapshot.message}}
                                        </p>
                                        {{#if journalSnapshot.streak_message}}
                                        <div style="background-color: #ECFDF5; border: 1px solid #A7F3D0; border-radius: 8px; padding: 16px; margin-top: 16px;">
                                            <p style="color: #065F46; font-size: 14px; font-weight: 500; margin: 0;">
                                                {{journalSnapshot.streak_message}}
                                            </p>
                                        </div>
                                        {{/if}}
                                    </td>
                                </tr>
                            </table>
                            {{/if}}
                            
                            <!-- Business Health Check -->
                            {{#if businessHealth}}
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" class="insight-card" style="background-color: #FFFFFF; border: 1px solid #E5E7EB; border-radius: 12px; padding: 32px; margin-bottom: 32px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);">
                                <tr>
                                    <td>
                                        <div class="card-header" style="display: flex; align-items: center; margin-bottom: 20px;">
                                            <span class="card-icon" style="font-size: 20px; margin-right: 12px;">📊</span>
                                            <h2 class="card-title" style="color: #111827; font-size: 18px; font-weight: 600; margin: 0;">Business Health Check</h2>
                                        </div>
                                        <p class="card-content" style="color: #374151; font-size: 15px; line-height: 1.7; margin: 0 0 24px 0;">
                                            {{businessHealth}}
                                        </p>
                                        
                                        <!-- Statistics Grid -->
                                        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                            <tr>
                                                <td class="stat-item" style="text-align: center; padding: 24px 16px; background-color: #F9FAFB; border-radius: 12px; border: 1px solid #E5E7EB; width: 23%;">
                                                    <div class="stat-number" style="font-size: 32px; font-weight: 700; color: #EA580C; margin-bottom: 8px; line-height: 1;">
                                                        {{personalizationData.totalGoals}}
                                                    </div>
                                                    <div class="stat-label" style="font-size: 13px; font-weight: 600; color: #6B7280; text-transform: uppercase; letter-spacing: 0.5px;">
                                                        Active Goals
                                                    </div>
                                                </td>
                                                <td style="width: 2%;"></td>
                                                <td class="stat-item" style="text-align: center; padding: 24px 16px; background-color: #F9FAFB; border-radius: 12px; border: 1px solid #E5E7EB; width: 23%;">
                                                    <div class="stat-number" style="font-size: 32px; font-weight: 700; color: #EA580C; margin-bottom: 8px; line-height: 1;">
                                                        {{personalizationData.recentEntryCount}}
                                                    </div>
                                                    <div class="stat-label" style="font-size: 13px; font-weight: 600; color: #6B7280; text-transform: uppercase; letter-spacing: 0.5px;">
                                                        Journal Entries
                                                    </div>
                                                </td>
                                                <td style="width: 2%;"></td>
                                                <td class="stat-item" style="text-align: center; padding: 24px 16px; background-color: #F9FAFB; border-radius: 12px; border: 1px solid #E5E7EB; width: 23%;">
                                                    <div class="stat-number" style="font-size: 32px; font-weight: 700; color: #EA580C; margin-bottom: 8px; line-height: 1;">
                                                        {{personalizationData.journalStreak}}
                                                    </div>
                                                    <div class="stat-label" style="font-size: 13px; font-weight: 600; color: #6B7280; text-transform: uppercase; letter-spacing: 0.5px;">
                                                        Day Streak
                                                    </div>
                                                </td>
                                                <td style="width: 2%;"></td>
                                                <td class="stat-item" style="text-align: center; padding: 24px 16px; background-color: #F9FAFB; border-radius: 12px; border: 1px solid #E5E7EB; width: 23%;">
                                                    <div class="stat-number" style="font-size: 32px; font-weight: 700; color: #EA580C; margin-bottom: 8px; line-height: 1;">
                                                        {{personalizationData.weeklyProgress}}%
                                                    </div>
                                                    <div class="stat-label" style="font-size: 13px; font-weight: 600; color: #6B7280; text-transform: uppercase; letter-spacing: 0.5px;">
                                                        Weekly Progress
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            {{/if}}
                            
                            <!-- Action Items -->
                            {{#if actionNudges}}
                            <div class="action-items" style="background-color: #FFFBEB; border: 1px solid #FED7AA; border-radius: 12px; padding: 32px; margin: 32px 0;">
                                <h3 class="action-title" style="color: #92400E; font-size: 18px; font-weight: 600; margin: 0 0 20px 0;">
                                    ⚡ Today's Action Items
                                </h3>
                                
                                {{#each smartSuggestions}}
                                <div class="action-item" style="background-color: #FFFFFF; border: 1px solid #E5E7EB; border-radius: 8px; padding: 20px; margin-bottom: 16px; display: block;">
                                    <p class="action-text" style="color: #374151; font-size: 15px; margin: 0 0 12px 0; line-height: 1.6;">
                                        <strong>{{title}}</strong><br>
                                        {{description}}
                                    </p>
                                    {{#if url}}
                                    <a href="{{../baseUrl}}{{url}}" class="action-button" style="background: linear-gradient(135deg, #EA580C 0%, #DC2626 100%); color: #FFFFFF; text-decoration: none; padding: 12px 24px; border-radius: 8px; font-size: 14px; font-weight: 600; display: inline-block; border: none;">
                                        {{action}} →
                                    </a>
                                    {{/if}}
                                </div>
                                {{/each}}
                                
                                <div style="text-align: center; margin-top: 24px;">
                                    <p style="color: #92400E; font-size: 14px; margin: 0;">
                                        {{actionNudges}}
                                    </p>
                                </div>
                            </div>
                            {{/if}}
                            
                            <!-- Business Insights -->
                            {{#if businessInsights}}
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" class="insight-card" style="background-color: #FFFFFF; border: 1px solid #E5E7EB; border-radius: 12px; padding: 32px; margin-bottom: 32px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);">
                                <tr>
                                    <td>
                                        <div class="card-header" style="display: flex; align-items: center; margin-bottom: 20px;">
                                            <span class="card-icon" style="font-size: 20px; margin-right: 12px;">💡</span>
                                            <h2 class="card-title" style="color: #111827; font-size: 18px; font-weight: 600; margin: 0;">Business Insights</h2>
                                        </div>
                                        <div class="card-content" style="color: #374151; font-size: 15px; line-height: 1.7; margin: 0;">
                                            {{businessInsights}}
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            {{/if}}
                            
                        </td>
                    </tr>
                    
                    <!-- Footer Section -->
                    <tr>
                        <td class="footer-section" style="background-color: #111827; padding: 40px 48px; text-align: center;">
                            <div class="footer-logo" style="color: #FFFFFF; font-size: 20px; font-weight: 600; margin-bottom: 16px;">
                                Bizzin
                            </div>
                            <p class="footer-text" style="color: #9CA3AF; font-size: 14px; line-height: 1.6; margin: 0 0 20px 0;">
                                Empowering entrepreneurs with AI-powered business intelligence.<br>
                                Keep building, keep growing. 🚀
                            </p>
                            <div>
                                <a href="{{baseUrl}}" class="footer-links" style="color: #60A5FA; text-decoration: none; font-size: 14px; margin: 0 16px;">Dashboard</a>
                                <a href="{{baseUrl}}/goals" class="footer-links" style="color: #60A5FA; text-decoration: none; font-size: 14px; margin: 0 16px;">Goals</a>
                                <a href="{{baseUrl}}/journal" class="footer-links" style="color: #60A5FA; text-decoration: none; font-size: 14px; margin: 0 16px;">Journal</a>
                                <a href="{{baseUrl}}/tools" class="footer-links" style="color: #60A5FA; text-decoration: none; font-size: 14px; margin: 0 16px;">BizBuilder Tools</a>
                            </div>
                            <p class="footer-unsubscribe" style="color: #6B7280; font-size: 12px; margin: 24px 0 0 0;">
                                You're receiving this because you enabled daily insights.<br>
                                <a href="{{baseUrl}}/settings/notifications" style="color: #6B7280; text-decoration: underline;">Manage email preferences</a>
                            </p>
                        </td>
                    </tr>
                    
                </table>
                
            </td>
        </tr>
    </table>
    
</body>
</html>