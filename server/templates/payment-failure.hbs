<body class="body" style="background-color: #f8f9fa; margin: 0; padding: 0; width: 100%;">
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="body">
        <tr>
            <td>&nbsp;</td>
            <td class="container">
                <div class="content">
                    <!-- Header -->
                    <table role="presentation" class="main">
