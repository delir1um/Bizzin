        /* Action button */
        .btn {
            box-sizing: border-box;
            width: 100%;
            background: linear-gradient(135deg, #EA7A57 0%, #f97316 100%) !important;
            border-radius: 8px;
            color: #ffffff !important;
            cursor: pointer;
            display: inline-block;
