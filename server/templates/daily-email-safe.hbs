        table, td { border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt; }
        img { border: 0; height: auto; line-height: 100%; outline: none; text-decoration: none; -ms-interpolation-mode: bicubic; }
        
        /* Inter font fallbacks */
        .font-inter {
            font-family: Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif !important;
        }
        
        /* Brand colors - HSL values matching website */
        .bg-orange { background-color: hsl(20.5, 90.2%, 48.2%) !important; } /* #EA7A57 */
        .text-orange { color: hsl(20.5, 90.2%, 48.2%) !important; }
        .text-dark { color: hsl(222.2, 84%, 4.9%) !important; } /* #0F172A */
        .text-muted { color: hsl(215.4, 16.3%, 46.9%) !important; } /* #64748B */
        .bg-white { background-color: #ffffff !important; }
