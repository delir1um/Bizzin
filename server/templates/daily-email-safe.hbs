        .border-light { border: 1px solid hsl(214.3, 31.8%, 91.4%) !important; } /* #E2E8F0 */
        
        /* Component styles matching website */
        .card {
            background-color: #ffffff;
            border: 1px solid hsl(214.3, 31.8%, 91.4%);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 16px;
        }
        
        .stats-card {
            background-color: #ffffff;
            border: 1px solid hsl(214.3, 31.8%, 91.4%);
            border-radius: 12px;
            padding: 16px;
            text-align: center;
        }
        
        .orange-banner {
            background: linear-gradient(135deg, hsl(20.5, 90.2%, 48.2%) 0%, hsl(24.6, 95%, 53.1%) 100%);
            border-radius: 12px;
            padding: 24px;
            text-align: center;
        }
        
        .goal-card {
            background-color: #ffffff;
            border: 1px solid hsl(214.3, 31.8%, 91.4%);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 12px;
        }
        
        .progress-bar {
            width: 100%;
            height: 8px;
            background-color: hsl(214.3, 31.8%, 91.4%);
            border-radius: 4px;
            overflow: hidden;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, hsl(20.5, 90.2%, 48.2%) 0%, hsl(24.6, 95%, 53.1%) 100%);
            transition: width 0.3s ease;
        }
        
        .status-pill {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .status-in-progress {
            background-color: hsl(20.5, 90.2%, 95%);
            color: hsl(20.5, 90.2%, 48.2%);
        }
        
        .status-completed {
            background-color: hsl(142.1, 76.2%, 95%);
            color: hsl(142.1, 76.2%, 36.3%);
        }
        
        .status-at-risk {
            background-color: hsl(0, 84.2%, 95%);
            color: hsl(0, 84.2%, 60.2%);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, hsl(20.5, 90.2%, 48.2%) 0%, hsl(24.6, 95%, 53.1%) 100%);
            color: #ffffff !important;
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none !important;
            font-weight: 600;
            font-size: 14px;
            display: inline-block;
            text-align: center;
            letter-spacing: 0.025em;
        }
        
        .btn-secondary {
            color: hsl(20.5, 90.2%, 48.2%) !important;
            text-decoration: none !important;
            font-weight: 500;
            font-size: 14px;
        }
        
        /* Aggressive dark mode prevention - force light theme across all clients */
        @media (prefers-color-scheme: dark) {
            body, table, td, p, a, span, div, h1, h2, h3, h4, h5, h6 {
                color: hsl(222.2, 84%, 4.9%) !important;
                background-color: transparent !important;
