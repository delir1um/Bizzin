            }
            .card, .stats-card, .goal-card {
                background-color: #ffffff !important;
                color: hsl(222.2, 84%, 4.9%) !important;
            }
        }
        
        /* Additional dark mode overrides for specific clients */
        [data-ogsc] body, [data-ogsc] table, [data-ogsc] td, [data-ogsc] div, [data-ogsc] span, [data-ogsc] p {
            color: hsl(222.2, 84%, 4.9%) !important;
            background-color: #ffffff !important;
        }
        
        /* Thunderbird and Outlook dark mode fixes */
        .moz-text-html body, .moz-text-html table, .moz-text-html td {
            color: hsl(222.2, 84%, 4.9%) !important;
            background-color: #ffffff !important;
        }
        
        /* Force container backgrounds */
        body {
            background-color: hsl(210, 40%, 98%) !important;
        }
        
        /* Gmail overrides */
        .ExternalClass { background-color: hsl(210, 40%, 98%) !important; }
        .ExternalClass * { background-color: transparent !important; }
        
        /* Responsive design */
        @media only screen and (max-width: 600px) {
            .container { width: 100% !important; margin: 8px !important; }
            .content-padding { padding: 16px !important; }
            .stats-row { width: 100% !important; }
