    <style type="text/css">
        /* Universal reset and dark theme base */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body, html {
            background-color: #0b0a1d !important;
            color: #f8fafc !important;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif !important;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            -webkit-text-size-adjust: 100%;
            -ms-text-size-adjust: 100%;
        }
        
        table {
            border-collapse: collapse;
            mso-table-lspace: 0pt;
            mso-table-rspace: 0pt;
        }
        
        img {
            border: 0;
            height: auto;
            line-height: 100%;
            outline: none;
            text-decoration: none;
            -ms-interpolation-mode: bicubic;
        }
        
        /* Main container */
        .email-container {
            background-color: #0b0a1d;
            padding: 20px 0;
            width: 100%;
        }
        
        .content-wrapper {
            background-color: #0b0a1d;
            max-width: 600px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        /* Header styles */
        .header-section {
            text-align: center;
            padding: 32px 0 24px 0;
            background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
            border-radius: 12px 12px 0 0;
            margin-bottom: 0;
        }
        
        .brand-title {
            color: #ffffff !important;
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 8px;
            letter-spacing: -0.5px;
            font-style: italic;
        }
        
        .header-subtitle {
            color: rgba(255, 255, 255, 0.9) !important;
            font-size: 16px;
            font-weight: 400;
            margin-bottom: 0;
        }
        
        /* Content card */
        .content-card {
            background-color: #1a1b2e;
            border: 1px solid #2a2d47;
            border-radius: 0 0 12px 12px;
            padding: 32px;
            margin-bottom: 24px;
        }
        
        .security-icon {
            text-align: center;
            font-size: 48px;
            margin-bottom: 20px;
        }
        
        .message-title {
            color: #f8fafc !important;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 16px;
            text-align: center;
        }
        
        .message-content {
            color: #cbd5e1 !important;
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 24px;
            text-align: center;
        }
        
        /* Action link styles */
        .action-link {
            background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
            color: #ffffff !important;
            padding: 18px 40px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            display: inline-block;
            margin: 16px auto;
            text-align: center;
        }
        
        /* Security notice section */
        .security-notice {
            background-color: #0f1019;
            border: 1px solid #2a2d47;
            border-radius: 8px;
            padding: 24px;
            margin-top: 24px;
        }
        
        .security-title {
            color: #f97316 !important;
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 16px;
            text-align: center;
        }
        
        .security-item {
            color: #cbd5e1 !important;
            font-size: 14px;
            margin-bottom: 12px;
            padding-left: 24px;
            position: relative;
        }
        
        .security-item::before {
            content: "üîí";
            position: absolute;
            left: 0;
            top: 0;
        }
        
        /* Footer */
        .footer-section {
            text-align: center;
            padding: 24px 0;
            color: #64748b !important;
            font-size: 14px;
        }
        
        .footer-links a {
            color: #f97316 !important;
            text-decoration: none;
            margin: 0 8px;
        }
        
        /* Responsive design */
        @media only screen and (max-width: 600px) {
            .content-wrapper {
                padding: 0 16px;
            }
            
            .content-card {
                padding: 24px;
            }
            
            .brand-title {
                font-size: 28px;
            }
            
            .message-title {
                font-size: 24px;
            }
        }
        
        /* Email client compatibility */
        .content-card {
            background-color: #1a1b2e !important;
        }
        
        .header-section {
            background: linear-gradient(135deg, #f97316 0%, #ea580c 100%) !important;
        }
        
        /* Force dark theme for better branding */
        .email-container {
            background-color: #0b0a1d !important;
        }
